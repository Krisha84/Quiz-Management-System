@model QuizManagement.Models.QuizModel

<div class="pagetitle">
    <h1>Add Quiz</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Quiz">Quiz</a></li>
            <li class="breadcrumb-item active"><a asp-controller="Quiz" asp-action="AddQuiz">AddQuiz</a></li>
        </ol>
    </nav>
</div>


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Quiz</h5>

                    <form asp-action="QuizAddEdit" asp-controller="Quiz" method="post">
                        <input type="hidden" asp-for="QuizID" />
                        <div class="row mb-3">
                            <label for="QuizName" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Quiz Name</label>
                            <div class="col-sm-1">:</div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="QuizName" placeholder="Enter quiz name" required>
                                <span class="text-danger" asp-validation-for="QuizName"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="TotalQuestions" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Total Questions</label>
                            <div class="col-sm-1">:</div>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" asp-for="TotalQuestions" placeholder="Enter total number of questions" required min="1">
                                <span class="text-danger" asp-validation-for="TotalQuestions"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="QuizDate" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Quiz Date</label>
                            <div class="col-sm-1">:</div>
                            <div class="col-sm-9">
                                <input type="date" class="form-control" asp-for="QuizDate" required>
                                <span class="text-danger" asp-validation-for="QuizDate"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>User ID</label>
                            <div class="col-sm-1">:</div>
                            <div class="col-sm-9">
                                <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                    <option value="">Select User</option>
                                </select>
                                <span class="text-danger" asp-validation-for="UserID"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a class="btn btn-danger" asp-controller="Quiz" asp-action="QuizList">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}