@model QuizManagement.Models.UserModel

<div class="pagetitle">
    <h1>Add User</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="User">User</a></li>
            <li class="breadcrumb-item active"><a asp-controller="User" asp-action="AddUser">Add User</a></li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add User</h5>

                    <form asp-controller="User" asp-action="UserAddEdit" method="post">
                        <input type="hidden" asp-for="UserID" />
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>User Name</label>
                            <div class="col-sm-1">:</div>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Enter user name" asp-for="UserName">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>Password</label>
                            <div class="col-sm-1">:</div>
                            <div class="col-sm-8">
                                <input class="form-control" placeholder="Enter password" asp-for="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>Email</label>
                            <div class="col-sm-1">:</div>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" placeholder="Enter email" asp-for="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>Mobile Number</label>
                            <div class="col-sm-1">:</div>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Enter mobile number" asp-for="Mobile">
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-success">Save</button>
                                <a class="btn btn-danger" asp-controller="User" asp-action="UserList">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}